<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="KanakoX">
        <createTable tableName="user_info" remarks="用户表">
            <column name="id" type="varchar(20)" remarks="用户ID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(20)" remarks="用户名">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(20)" remarks="密码">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" remarks="更新时间">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>